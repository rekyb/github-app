<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Settings">

        <ListPreference
            android:defaultValue="1"
            android:dialogTitle="Appearance"
            android:entries="@array/app_theme_preferences"
            android:entryValues="@array/app_theme_preferences"
            android:icon="@drawable/ic_theme"
            android:key="@string/key_list_theme"
            android:summary="Choose your light or dark theme preference"
            android:title="Appearance" />

        <Preference
            android:icon="@drawable/ic_lang"
            android:summary="Change your user interface language"
            android:title="Language">

            <intent android:action="android.settings.LOCALE_SETTINGS" />

        </Preference>

        <Preference
            android:key="@string/key_clear_cache"
            android:title="Clear cache" />
    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
            android:selectable="false"
            android:summary="Just another Github API android project. Made by Reky Bongso." />
        <Preference
            android:summary="The source code of this project can be found on my Github repository."
            android:title="Source code">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/rekybongso/jyro" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>